{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "work": {
      "type": "object",
      "properties": {
        "jobId": {"type": "string"},
        "hours": {"type": "number", "minimum": 0}
      },
      "required": ["jobId", "hours"]
    },
    "study": {
      "type": "object",
      "properties": {
        "course": {"type": "string"},
        "hours": {"type": "number", "minimum": 0}
      },
      "required": ["course", "hours"]
    },
    "travel": {
      "type": "object",
      "properties": {
        "cityId": {"type": "string"}
      },
      "required": ["cityId"]
    },
    "housing": {
      "type": "object",
      "properties": {
        "tier": {"type": "integer", "minimum": 0, "maximum": 4},
        "cityId": {"type": "string"}
      },
      "required": ["tier"]
    },
    "errands": {
      "type": "object",
      "properties": {
        "shoppings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "itemId": {"type": "string"},
              "qty": {"type": "integer", "minimum": 1}
            },
            "required": ["itemId", "qty"]
          }
        },
        "leisureHours": {"type": "number", "minimum": 0}
      }
    }
  },
  "additionalProperties": false
}
